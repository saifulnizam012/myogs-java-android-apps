<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/btn_website"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cardview_spec"
    android:fillViewport="true"
    tools:context=".News_Detail_Activity">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FCEBFF">

        <ImageView
            android:id="@+id/tv_newsImage"
            android:layout_width="394dp"
            android:layout_height="224dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/news_lenovoyoga" />

        <TextView
            android:id="@+id/tv_newsTopic"
            android:layout_width="336dp"
            android:layout_height="123dp"
            android:layout_marginStart="167dp"
            android:layout_marginEnd="168dp"
            android:text="News Topics"
            android:textAlignment="viewStart"
            android:textColor="#472B4C"
            android:textSize="24dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_newsImage"
            app:layout_constraintVertical_bias="0.027" />

        <TextView
            android:id="@+id/tv_newsDateDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textColor="#472B4C"
            app:layout_constraintBottom_toBottomOf="@+id/tv_newsTopic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.923"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_newsTopic"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/tv_newsContent"
            android:layout_width="328dp"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="#472B4C"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.446"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_newsTopic"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
